<suki:SukiWindow 
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:suki="https://github.com/kikipoulet/SukiUI"
    xmlns:helper="clr-namespace:MFAAvalonia.Helper"
    xmlns:windows="clr-namespace:MFAAvalonia.Views.Windows"
    x:Class="MFAAvalonia.Views.Windows.AlreadyRunningWindow"
    x:DataType="windows:AlreadyRunningWindow"
    mc:Ignorable="d"
    Title="MAA 单实例检测"
    Width="500"
    Height="220"
    MinWidth="400"
    MinHeight="200"
    WindowStartupLocation="CenterScreen"
    CanResize="False"
    d:DesignWidth="500"
    d:DesignHeight="220">
    
    <suki:SukiWindow.LogoContent>
        <Image
            Height="18"
            Source="{x:Static helper:IconHelper.Icon}"
            Stretch="Uniform"
            Width="18" />
    </suki:SukiWindow.LogoContent>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <!-- Content Area -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <!-- Warning Icon -->
            <Viewbox Grid.Column="0" Width="48" Height="48" VerticalAlignment="Top" Margin="0,0,15,0">
                <Path 
                    Fill="#FFA500"
                    Data="M12,2L1,21H23M12,6L19.53,19H4.47M11,10V14H13V10M11,16V18H13V16" />
            </Viewbox>
            
            <!-- Message Text -->
            <TextBlock 
                Grid.Column="1"
                Text="{Binding MessageText}"
                TextWrapping="Wrap"
                VerticalAlignment="Center"
                FontSize="14"
                LineHeight="22" />
        </Grid>
        
        <!-- Button Area -->
        <Border Grid.Row="1" Margin="0,15,0,0">
            <Button 
                Content="好的"
                Click="Ok_Click"
                HorizontalAlignment="Right"
                MinWidth="100"
                Height="35"
                Classes="Accent" />
        </Border>
    </Grid>
</suki:SukiWindow>
